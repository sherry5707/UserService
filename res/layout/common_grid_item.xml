<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/common_grid_view_item_width"
    android:layout_height="@dimen/common_grid_view_item_height"
    android:background="@drawable/item_selector"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/itemIcon"
        android:layout_width="@dimen/common_grid_view_item_icon_width"
        android:layout_height="@dimen/common_grid_view_item_icon_height"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="20dp"
        android:scaleType="centerInside"/>

    <TextView
        android:id="@+id/itemTitle"
        android:paddingTop="@dimen/common_grid_view_item_title_padding_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:singleLine="true"
        android:textColor="@color/font_subtitle"
        android:textSize="@dimen/common_sub_size" />

</LinearLayout>